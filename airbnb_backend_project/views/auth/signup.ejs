<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>airbnb | Sign Up</title>
    <link rel="stylesheet" href="/output.css" />
  </head>
  <body>
    <%- include("../partials/header.ejs") %>
    <section
      class="border border-teal-200 shadow-md shadow-teal-200 max-w-xl p-4 mx-auto mt-16"
    >
      <h1 class="text-center text-lg mb-3">Register your account</h1>

      <%- include('../partials/errors.ejs') %>

      <form action="/auth/signup" method="post" class="flex flex-col gap-4">
        <div class="flex flex-col space-y-1">
          <label for="firstname" class="text-sm text-gray-500"
            >First Name</label
          >
          <input
            type="text"
            name="firstname"
            id="firstname"
            value="<%= oldInput.firstname ? oldInput.firstname: '' %>"
            placeholder="maan"
            required
            class="border border-teal-500 w-full px-4 py-3 rounded outline-none"
          />
        </div>

        <div class="flex flex-col space-y-1">
          <label for="lastname" class="text-sm text-gray-500">Last Name</label>
          <input
            type="text"
            name="lastname"
            id="lastname"
            value="<%= oldInput.lastname ? oldInput.lastname: '' %>"
            placeholder="mansoor"
            required
            class="border border-teal-500 w-full px-4 py-3 rounded outline-none"
          />
        </div>

        <div class="flex flex-col space-y-1">
          <label for="email" class="text-sm text-gray-500">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            value="<%= oldInput.email ? oldInput.email: '' %>"
            placeholder="example@gmail.com"
            required
            class="border border-teal-500 w-full px-4 py-3 rounded outline-none"
          />
        </div>

        <div class="flex flex-col space-y-1">
          <label for="password" class="text-sm text-gray-500">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="********"
            required
            class="border border-teal-500 w-full px-4 py-3 rounded outline-none"
          />
        </div>

        <div class="flex flex-col space-y-1">
          <label for="confirmpassword" class="text-sm text-gray-500"
            >Confirm Password</label
          >
          <input
            type="password"
            name="confirmpassword"
            id="confirmpassword"
            placeholder="********"
            required
            class="border border-teal-500 w-full px-4 py-3 rounded outline-none"
          />
        </div>

        <div class="flex flex-col space-y-1">
          <label for="usertype" class="text-sm text-gray-500"
            >Select your type</label
          >
          <select
            name="usertype"
            id="usertype"
            required
            class="border border-teal-500 w-full px-4 py-3 rounded outline-none"
          >
            <option
              value="guest"
              <%= oldInput.usertype === 'guest' ? 'selected' : '' %>
            >
              Guest
            </option>
            <option value="host" <%= oldInput.usertype === 'host' ? 'selected' : '' %>>
              Host
            </option>
          </select>
        </div>

        <div class="flex">
          <input type="checkbox" name="terms" id="terms" />
          <label for="terms" class="ml-2 text-sm text-gray-500"
            >I agree to the terms and conditions</label
          >
        </div>

        <button
          type="submit"
          class="bg-teal-500 w-full px-4 py-3 rounded cursor-pointer duration-300 hover:bg-teal-900 hover:text-white"
        >
          Register
        </button>
      </form>
    </section>
  </body>
</html>
